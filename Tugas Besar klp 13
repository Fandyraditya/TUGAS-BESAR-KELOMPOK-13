#include <time.h>
#include <stdio.h>
#include <stdlib.h>
char plat[10];
char ulang;
int jenis;
float biaya;
float masuk;
int totalJam;
float keluar;
float total_biaya;
float tambahan=1000;
int main(){
    mulai:
printf("=======================================\n");
printf("||            TIKET PARKIR           ||\n");
printf("=======================================\n");
printf(" Plat Kendaraan       = ");
scanf("%s",&plat);
printf(" kode jenis kendaraan = ");
scanf("%d",&jenis);
if(jenis==2)
{
    biaya=2000;
printf(" kendaraan            = motor\n");
printf(" biaya parkir         = Rp%.2f\n",biaya);
}
else if(jenis==4)
{
    biaya=5000;
printf(" kendaraan            = mobil\n");
printf(" biaya parkir         = Rp.%.2f\n",biaya);}
else {
    printf("UNKNOWN CODE\n");
    system("pause");
    system("cls");
    goto mulai;
}

printf(" jam masuk            = ");
scanf("%f",&masuk);

printf(" jam keluar           = ");
scanf("%f",&keluar);

totalJam = keluar-masuk;

printf(" total jam parkir     = %d\n",totalJam);

total_biaya = totalJam*tambahan+biaya;
printf(" total biaya parkir   = Rp.%.2f",total_biaya);

printf("\n==============TERIMA KASIH=============\n");

printf("==========SILAHKAN DATANG LAGI=========\n\n");

return 0;
